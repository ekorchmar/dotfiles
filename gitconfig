[core]
  editor = lvim
  pager = bat
  autocrlf = input
[credential "https://github.com"]
  helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
  helper = !/usr/bin/gh auth git-credential
[user]
  email = korchmar.eduard@gmail.com
  name = Eduard Korchmar
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[alias]
  unstage = reset HEAD --
  last = log -1 HEAD
  root = rev-parse --show-toplevel
  ship = !(git rev-parse --show-toplevel | xargs git add) && git commit && git push
  nah = ! git reset --hard && git clean -df
  amend = commit --amend --no-edit
  makegh = "!f() { gh repo create --private \"$1\"; git remote add origin https://github.com/ekorchmar/$1.git; git push origin master; }; f"
  lazy = !lazygit
[push]
  autoSetupRemote = true
[pull]
  rebase = true
[rerere]
  enabled = true
[diff]
  external = difft
  tool = nvimdiff
  guitool = nvimdiff
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = false
  trustExitCode = false
  prompt = true
[difftool]
  prompt = false
[mergetool "nvimdiff"]
  cmd = "lvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"
  layout = LOCAL,MERGED,REMOTE
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
